<h1><%= @user.name %>'s Profile Page</h1>

<body>
<img src="<%= @user.avatar %>" class= "avatar"> </img>

<h2> <%= @user.name %>'s Albums:</h2>
	<% @albums.each do |album| %>
		<a href ="/albums/<%=album.id%>/photos"> <img src="<%= album.cover_photo %>"></a>
	<% end %>

<%= link_to 'Index of Users', users_path %>
<%= link_to 'Home', root_path %>
<%= link_to 'Logout', logout_path %>
<%= link_to 'Albums Index', albums_path %>
<%= link_to 'Edit User', edit_user_path %>
<%= link_to 'Add Album', new_album_path %>
</body>

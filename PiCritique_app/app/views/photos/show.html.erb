<h1>Rate this pic or leave a comment!</h1>

<img src="<%=@photo.content%>" class="album-photo">

<%# render 'comment_input' %>

<div id ="comment-div">
	<p>Leave Feedback:</p>
	<button id="submit-comment"> 
		Post Comment
	</button>
	<textarea id= "comment-input"></textarea>
	<% @photo.comments.each do |comment| %>
	<p><img class='thumbnail' src="<%= comment.user.avatar %>"><%= comment.content %></p>
	<% end %>
</div>

<%= link_to 'Index of Users', users_path %>
<%= link_to 'Home', root_path %>
<%= link_to 'Logout', logout_path %>
<%= link_to 'Albums Index', albums_path %>
